<Tasks>:
    orientation: "vertical"

    ScrollView:
        BoxLayout:
            id: box
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height


    BoxLayout:
        size_hint_y: None
        height: 100

        TextInput:
            id: input

        Button:
            font_size: 25
            text: "Add"
            size_hint_x: None
            width: 60
            on_release: root.addWidget()




<Task>:
    size_hint_y: None
    height: 100

    Label:

        id: label
        font_size: 30




    Button:
        text: "Do it"
        size_hint_x: None
        width: 60
        on_release: root.DoTask()



    Button:
        text: "X"
        size_hint_x: None
        width: 40
        on_release: app.root.ids.box.remove_widget(root)


