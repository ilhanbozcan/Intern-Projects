<Screen1>:
    BoxLayout:
        orientation: "vertical"
        Label:
            id: label1
            font_size: 50
            text: ' v0'
        Button:
            on_release: app.root.current = "Screen2"
            text: "Click to show task list"
            font_size: 75
        Button:
            id: add
            on_release: root.add_task()
            text: "Click to add task"
            font_size: 50

        TextInput:
            id: task_input
            text: "Enter a task"







